<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer glow/shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#20FF0000" /> <!-- Light red shadow -->
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>

    <!-- Main badge -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/notification_important" />
            <stroke
                android:width="1.5dp"
                android:color="@color/background" />
        </shape>
    </item>

</layer-list>