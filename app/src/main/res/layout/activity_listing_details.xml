<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ld_rootCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/ld_topBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:background="@color/background"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/ld_backIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/neutral"/>

        <TextView
            android:id="@+id/ld_appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Listing"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:letterSpacing="0.03"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:paddingTop="12dp"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/ld_headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit your listing"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/ld_headerSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update photos, price, and details"
                    android:layout_marginTop="4dp"
                    android:textSize="13sp"
                    android:textColor="@color/textcolor"/>
            </LinearLayout>

            <!-- Media Card (same style as add product) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/secondary">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/ld_mediaViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/background"/>

                    <Button
                        android:id="@+id/ld_btnPickImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Photos/Video"
                        android:drawableStart="@drawable/ic_add_photo"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/background"
                        android:layout_centerInParent="true"
                        android:elevation="8dp"/>

                    <TextView
                        android:id="@+id/ld_tvMediaCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="12dp"
                        android:paddingStart="10dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/rounded_background_neutral"
                        android:text="0 / 8"
                        android:textColor="@color/background"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Form Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ld_etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Item Name"
                            android:inputType="textCapWords"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Size & Price -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/primary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ld_etSize"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Size (S/M/L)"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/primary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ld_etPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Price (RM) / Day"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Status -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item Status"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/neutral"
                        android:layout_marginTop="16dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/ld_chipGroupStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipAvailable"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipReserved"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reserved"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipUnavailable"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unavailable"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Colors -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colors Available"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/neutral"
                        android:layout_marginTop="16dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/ld_chipGroupColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipColorWhite"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="White"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipColorBlack"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Black"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipColorNavy"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Navy"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipColorPink"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pastel Pink"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Category -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/neutral"
                        android:layout_marginTop="16dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/ld_chipGroupCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipCategoryKurung"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kurung"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipCategoryJubah"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jubah"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipCategoryKebaya"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kebaya"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Description -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ld_etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:hint="Item description (material, condition, care...)"
                            android:inputType="textMultiLine"
                            android:gravity="top"
                            android:paddingTop="8dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Update Button -->
                    <Button
                        android:id="@+id/ld_btnUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Update Listing"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/background"/>

                    <ProgressBar
                        android:id="@+id/ld_progress"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
