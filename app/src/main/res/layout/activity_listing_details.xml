<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ld_rootCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Top bar (same style as add product) -->
    <LinearLayout
        android:id="@+id/ld_topBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:background="@color/background"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/ld_backIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/ld_appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Listing Details"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:letterSpacing="0.03"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="65dp">

            <!-- Small hero header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:orientation="vertical"
                android:padding="14dp"
                android:gravity="center_vertical"
                android:elevation="0dp">

                <TextView
                    android:id="@+id/ld_headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit listing"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/ld_headerSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update details or remove this listing"
                    android:layout_marginTop="4dp"
                    android:textSize="13sp"
                    android:textColor="@color/neutral"/>
            </LinearLayout>

            <!-- Card with form -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Product preview -->
                    <ImageView
                        android:id="@+id/ld_imgProduct"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample_product"
                        android:background="@color/background"/>

                    <Button
                        android:id="@+id/ld_btnPickImage"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Change Image"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/primary"
                        android:textColor="@android:color/white"/>

                    <!-- Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ld_etName"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:hint="Item name" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Size & Price -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/primary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ld_etSize"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:hint="Size" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/primary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ld_etPrice"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:hint="Price (RM)"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Status chips -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/primary"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/ld_chipGroupStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        android:layout_marginTop="6dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipAvailable"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipReserved"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reserved"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipUnavailable"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unavailable"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Colors (multi) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colors"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/primary"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/ld_chipGroupColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:tag="multi">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipColorWhite"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="White"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipColorBlack"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Black"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipColorNavy"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Navy"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipColorPink"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pastel Pink"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Category chips -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/primary"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/ld_chipGroupCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        android:layout_marginTop="6dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipCategoryKurung"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kurung"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipCategoryJubah"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jubah"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/ld_chipCategoryKebaya"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kebaya"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Description -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ld_etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:hint="Description"
                            android:inputType="textMultiLine"
                            android:gravity="top"
                            android:paddingTop="8dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="14dp">

                        <Button
                            android:id="@+id/ld_btnDelete"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Delete"
                            android:backgroundTint="@android:color/holo_red_dark"
                            android:textColor="@android:color/white"/>

                        <Button
                            android:id="@+id/ld_btnUpdate"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Update"
                            android:layout_marginStart="12dp"
                            android:backgroundTint="@color/primary"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/ld_progress"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
