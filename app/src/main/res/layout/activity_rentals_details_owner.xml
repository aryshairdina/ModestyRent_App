<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Bar -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/neutral" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rental Details"
                    android:textColor="@color/neutral"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Main Content Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Product Info -->
                <TextView
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textColor="@color/neutral"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/bookingNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#MR251117181759886"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Status Timeline with Icons -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status Timeline"
                    android:textColor="@color/neutral"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/statusTimeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp" />

                <!-- Rental Period -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rental Period"
                    android:textColor="@color/neutral"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/rentalPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="17 Nov 2025 - 21 Nov 2025 (4 days)"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Price Breakdown -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price Breakdown"
                    android:textColor="@color/neutral"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rental Amount"
                        android:textColor="@color/textcolor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/rentalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM 100.00"
                        android:textColor="@color/textcolor"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Deposit"
                        android:textColor="@color/textcolor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/depositAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM 50.00"
                        android:textColor="@color/textcolor"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/secondary"
                    android:layout_marginVertical="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Amount"
                        android:textColor="@color/neutral"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM 150.00"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Delivery Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deliveryCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery Information"
                    android:textColor="@color/neutral"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/deliveryOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pickup"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/deliveryAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NO 22 JALAN PJS 2C/7B TAMAN MEDAN"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/ownerContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Owner: Zunaidah (0164799204)"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons for Owner -->
        <LinearLayout
            android:id="@+id/ownerActionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="visible">

            <!-- Delivery Flow Actions -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrepareDelivery"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Prepare Delivery"
                android:textColor="@color/background"
                android:backgroundTint="@color/primary"
                app:cornerRadius="24dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMarkOutForDelivery"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Mark Out for Delivery"
                android:textColor="@color/background"
                android:backgroundTint="@color/primary"
                app:cornerRadius="24dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmReadyPickup"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Confirm Ready for Pickup"
                android:textColor="@color/background"
                android:backgroundTint="@color/primary"
                app:cornerRadius="24dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Return Flow Actions -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInspectReturn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Inspect Returned Item"
                android:textColor="@color/background"
                android:backgroundTint="@color/primary"
                app:cornerRadius="24dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompleteRental"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Complete Rental"
                android:textColor="@color/background"
                android:backgroundTint="@color/primary"
                app:cornerRadius="24dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>