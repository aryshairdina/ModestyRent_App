<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_arrow_back"
                android:padding="6dp"
                android:backgroundTint="@color/neutral"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item Inspection"
                android:textAlignment="center"
                android:textColor="@color/neutral"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="36dp"
                android:layout_height="36dp" />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Booking Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Booking Information"
                        android:textColor="@color/neutral"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Product"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvProductName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="—"
                            android:textColor="@color/neutral"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Borrower"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvBorrowerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="—"
                            android:textColor="@color/neutral"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rental Period"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvRentalPeriod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="—"
                            android:textColor="@color/neutral"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Return Method"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvReturnMethod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="—"
                            android:textColor="@color/neutral"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Inspection Checklist Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Inspection Checklist"
                        android:textColor="@color/neutral"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Item Condition -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Item Condition"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/rgItemCondition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            android:layout_marginBottom="8dp"
                            app:strokeColor="@color/secondary"
                            app:strokeWidth="1dp">

                            <RadioButton
                                android:id="@+id/rbExcellent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Excellent - No visible wear"
                                android:buttonTint="@color/primary"
                                android:textColor="@color/textcolor"
                                android:padding="16dp" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            android:layout_marginBottom="8dp"
                            app:strokeColor="@color/secondary"
                            app:strokeWidth="1dp">

                            <RadioButton
                                android:id="@+id/rbGood"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Good - Minor wear"
                                android:buttonTint="@color/primary"
                                android:textColor="@color/textcolor"
                                android:padding="16dp" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            android:layout_marginBottom="8dp"
                            app:strokeColor="@color/secondary"
                            app:strokeWidth="1dp">

                            <RadioButton
                                android:id="@+id/rbFair"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fair - Noticeable wear"
                                android:buttonTint="@color/primary"
                                android:textColor="@color/textcolor"
                                android:padding="16dp" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="1dp"
                            app:strokeColor="@color/secondary"
                            app:strokeWidth="1dp">

                            <RadioButton
                                android:id="@+id/rbPoor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Poor - Significant damage"
                                android:buttonTint="@color/primary"
                                android:textColor="@color/textcolor"
                                android:padding="16dp" />

                        </com.google.android.material.card.MaterialCardView>

                    </RadioGroup>

                    <!-- Damage Assessment -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Damage Assessment"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxBackgroundColor="@color/background"
                        app:boxStrokeColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDamageNotes"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:hint="Describe any damages or issues found during inspection"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/textcolor"
                            android:alpha="0.7" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Repair Cost -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Repair/Damage Cost"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvRepairCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 0.00"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderRepairCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="50"
                        android:stepSize="10"
                        android:value="0"
                        app:thumbColor="@color/primary"
                        app:trackColorInactive="@color/secondary"
                        app:trackColorActive="@color/primary"
                        android:layout_marginBottom="16dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Deposit Adjustment Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="100dp"
                app:cardBackgroundColor="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deposit Adjustment"
                        android:textColor="@color/neutral"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Original Deposit"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvOriginalDeposit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 50.00"
                            android:textColor="@color/neutral"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Deductions"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDeductions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 0.00"
                            android:textColor="@color/primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/secondary"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Refund Amount"
                            android:textColor="@color/neutral"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRefundAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 50.00"
                            android:textColor="@color/primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        android:background="@color/background"
        app:cardBackgroundColor="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refund Amount"
                    android:textColor="@color/textcolor"
                    android:textSize="12sp"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/tvFinalRefund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM 50.00"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompleteInspection"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Complete Inspection"
                android:textColor="@color/background"
                android:backgroundTint="@color/primary"
                app:cornerRadius="24dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>