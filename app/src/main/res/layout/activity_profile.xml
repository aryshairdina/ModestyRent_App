<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    tools:context=".activity_profile">

    <!-- Top Bar (keeps your earlier top bar style) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:background="@color/background"
        android:elevation="4dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MODESTYRENT"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:letterSpacing="0.03"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_notifications"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Overlapping circular initials badge (no extra drawable) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/initialsBadge"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="48dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="@color/primary">

            <TextView
                android:id="@+id/initialsText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="NI"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/background"
                android:fontFamily="sans-serif-medium" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nur Arysha Irdina"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/neutral"
            android:layout_marginBottom="16dp" />

        <!-- mini stats strip -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="18dp"
            android:weightSum="3">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/statListing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/neutral" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listings"
                        android:textSize="12sp"
                        android:textColor="@color/neutral" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/statRentals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/neutral" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Rentals"
                        android:textSize="12sp"
                        android:textColor="@color/neutral" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/statRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/neutral" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:textSize="12sp"
                        android:textColor="@color/neutral" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Actions: Edit Profile, My Listings, My Rentals, Logout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">



            <!-- Outlined style using stroke (neutral border on white) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditProfile"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="6dp"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textColor="@color/neutral"
                app:strokeColor="@color/neutral"
                app:strokeWidth="1.5dp"
                app:cornerRadius="12dp"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMyRentals"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="6dp"
                android:text="My Rentals"
                android:textAllCaps="false"
                android:textColor="@color/neutral"
                app:strokeColor="@color/neutral"
                app:strokeWidth="1.5dp"
                app:cornerRadius="12dp"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBookingRequest"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="6dp"
                android:text="Booking Requests"
                android:textAllCaps="false"
                android:textColor="@color/neutral"
                app:strokeColor="@color/neutral"
                app:strokeWidth="1.5dp"
                app:cornerRadius="12dp"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMyListings"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="6dp"
                android:text="My Listings"
                android:textAllCaps="false"
                android:textColor="@color/neutral"
                app:strokeColor="@color/neutral"
                app:strokeWidth="1.5dp"
                app:cornerRadius="12dp"
                app:iconGravity="textStart" />




            <!-- Logout uses primary color to stand out -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/signOutButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="14dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="@color/background"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/primary" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation (keeps yours, unchanged) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:background="@color/background"
        app:menu="@menu/menu_home_bottom"
        app:itemIconTint="@color/neutral"
        app:itemTextColor="@color/neutral"
        app:labelVisibilityMode="unlabeled"
        android:elevation="6dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
