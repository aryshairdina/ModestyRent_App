<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/media_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:background="@drawable/gradient_bottom_overlay"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/details_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/controls_layout"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/text_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/background"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:shadowColor="#FF000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="4"
                tools:text="Elegant Baju Kurung (Midnight)" />

            <TextView
                android:id="@+id/text_video_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textStyle="normal"
                android:shadowColor="#FF000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"
                tools:text="Good Condition, perfect for any formal event. Size S. Swipe to see more media." />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/background"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_rounded_primary_fill"
                android:clickable="true"
                android:focusable="true"
                tools:text="RENT NOW: RM 120 / DAY"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/controls_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/btn_owner_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person"
                app:tint="@color/background"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="View Owner Profile"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/btn_like"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_favorite_border"
                app:tint="@color/background"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Like" />

            <TextView
                android:id="@+id/text_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5K"
                android:textColor="@color/background"
                android:textSize="12sp"
                android:textStyle="bold"
                android:shadowColor="#FF000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/btn_comment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_comment"
                app:tint="@color/background"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Comment" />

            <TextView
                android:id="@+id/text_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45"
                android:textColor="@color/background"
                android:textSize="12sp"
                android:textStyle="bold"
                android:shadowColor="#FF000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>