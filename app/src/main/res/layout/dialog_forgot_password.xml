<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background">

    <!-- Dialog Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:gravity="center">

        <!-- Icon Container -->
        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_circle_primary"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_lock_reset"
                app:tint="@color/background" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="@color/neutral"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvDialogSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email to reset password"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Email Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:boxStrokeColor="@color/primary"
        app:boxStrokeWidth="1dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintTextColor="@color/textcolor"
        app:endIconMode="clear_text"
        app:endIconTint="@color/textcolor"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/primary">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="             Email Address"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/neutral"
            android:textColorHint="@color/textcolor"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Error Message -->
    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:textSize="12sp"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:visibility="gone" />

    <!-- Instruction Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We'll send you a link to reset your password"
        android:textColor="@color/textcolor"
        android:textSize="13sp"
        android:lineSpacingExtra="2dp"
        android:paddingStart="4dp"
        android:paddingBottom="24dp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="8dp">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:background="@android:color/transparent"
            android:text="CANCEL"
            android:textAllCaps="true"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:minWidth="0dp"
            android:minHeight="0dp" />

        <!-- Send Link Button -->
        <Button
            android:id="@+id/btnSendLink"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/bg_button_primary"
            android:text="SEND LINK"
            android:textAllCaps="true"
            android:textColor="@color/background"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:cornerRadius="24dp" />
    </LinearLayout>
</LinearLayout>