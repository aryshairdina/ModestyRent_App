<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:fitsSystemWindows="true">

    <!-- AppBar + custom top bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:background="@color/background"
            android:elevation="4dp"
            app:layout_scrollFlags="scroll|enterAlways">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_arrow_back"
                android:padding="6dp"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/topTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"
                android:text="Product Details"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clipToPadding="false"
        android:layout_marginBottom="100dp">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image slider -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="14dp"
                android:layout_marginBottom="12dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerImages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayoutIndicator"
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="12dp"
                        android:background="@android:color/transparent"
                        android:padding="-4dp"
                        app:tabGravity="center"
                        app:tabMode="fixed"
                        app:tabIndicator="@null"
                        app:tabIndicatorHeight="0dp"
                        app:tabRippleColor="@android:color/transparent"
                        app:tabBackground="@drawable/tab_dot_selector"
                        app:tabMinWidth="0dp"
                        app:tabMaxWidth="0dp"
                        app:tabPadding="0dp"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Title -->
            <TextView
                android:id="@+id/tvItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/neutral"/>

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category • Size"
                android:textSize="13sp"
                android:textColor="@color/neutral"
                android:alpha="0.7"
                android:layout_marginTop="4dp"/>

            <!-- Price & estimate -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tvPricePerDay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="RM 0 / day"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"/>

                <TextView
                    android:id="@+id/tvEstimate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimate: RM 0"
                    android:textStyle="bold"
                    android:textColor="@color/neutral"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvShortDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short description here..."
                android:layout_marginTop="10dp"
                android:textColor="@color/neutral"
                android:alpha="0.85"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/secondary"
                android:alpha="0.25" />

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size and Measurements"
                android:textStyle="bold"
                android:textColor="@color/neutral"/>

            <TextView
                android:id="@+id/tvSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M"
                android:layout_marginTop="6dp"
                android:textColor="@color/neutral"/>

            <!-- Select date -->
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select date range"
                android:textStyle="bold"
                android:textColor="@color/neutral"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:clipToPadding="false"
                android:clipToOutline="true">

                <CalendarView
                    android:id="@+id/calendarAvailability"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:background="@color/background" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Date range display + estimate -->
            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvFromLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From:"
                    android:textColor="@color/neutral"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:id="@+id/tvFromDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textColor="@color/neutral"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvToLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To:"
                    android:textColor="@color/neutral"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:id="@+id/tvToDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textColor="@color/neutral"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvDaysLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days:"
                    android:textColor="@color/neutral"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:id="@+id/tvDaysCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/neutral"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"/>
            </LinearLayout>

            <!-- Owner card -->
            <androidx.cardview.widget.CardView
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivOwnerAvatar"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_person"
                        android:background="@drawable/circle_placeholder"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_marginStart="12dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvOwnerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Owner Name"
                            android:textStyle="bold"
                            android:textColor="@color/neutral"/>

                        <TextView
                            android:id="@+id/tvOwnerBio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UiTM Shah Alam"
                            android:textSize="13sp"
                            android:alpha="0.7"
                            android:textColor="@color/neutral"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnViewProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/background"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Chat (no illegal anchor) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChat"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/ic_chat"
        android:tint="@android:color/white"
        app:backgroundTint="@color/primary"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:contentDescription="Chat" />

    <!-- BOOK & CHAT BOTTOM BAR -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomBookingBar"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_margin="12dp"
        android:layout_gravity="bottom"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:padding="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChatOwner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:text="Chat Owner"
                android:textColor="@color/background"
                android:backgroundTint="@color/primary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBook"
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:text="Book"
                android:backgroundTint="@color/primary"
                android:textColor="@color/background"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
