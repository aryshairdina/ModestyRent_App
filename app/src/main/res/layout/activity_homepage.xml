<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity_homepage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/background"
        android:paddingTop="20dp"
        android:paddingBottom="4dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MODESTYRENT"
            android:textAlignment="viewStart"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="24sp"
            android:letterSpacing="0.15"
            android:fontFamily="sans-serif-black" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_notifications"
            app:tint="@color/neutral"
            android:contentDescription="Notifications" />
    </LinearLayout>

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:text="Welcome, User"
        android:textAlignment="viewStart"
        android:textColor="@color/neutral"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:tint="@color/textcolor"
                android:layout_marginEnd="12dp"
                android:contentDescription="Search Icon"/>

            <EditText
                android:id="@+id/searchBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search baju kurung or style..."
                android:textColor="@color/neutral"
                android:textColorHint="@color/textcolor"
                android:background="@null"
                android:textSize="16sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="text" />

            <ImageView
                android:id="@+id/btnFilter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_filter"
                app:tint="@color/primary"
                android:layout_marginStart="8dp"
                android:contentDescription="Filter Button"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="16dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/categoryGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipSpacing="12dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="All"
                    android:textColor="@color/background"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/primary"
                    app:chipCornerRadius="20dp"
                    app:chipMinHeight="40dp"
                    app:chipStrokeColor="@color/primary"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/background" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kurung"
                    android:textColor="@color/neutral"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/secondary"
                    app:chipCornerRadius="20dp"
                    app:chipMinHeight="40dp"
                    app:chipStrokeColor="@color/textcolor"
                    app:chipStrokeWidth="0dp"
                    app:rippleColor="@color/primary" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jubah"
                    android:textColor="@color/neutral"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/secondary"
                    app:chipCornerRadius="20dp"
                    app:chipMinHeight="40dp"
                    app:chipStrokeColor="@color/textcolor"
                    app:chipStrokeWidth="0dp"
                    app:rippleColor="@color/primary" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kebaya"
                    android:textColor="@color/neutral"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/secondary"
                    app:chipCornerRadius="20dp"
                    app:chipMinHeight="40dp"
                    app:chipStrokeColor="@color/textcolor"
                    app:chipStrokeWidth="0dp"
                    app:rippleColor="@color/primary" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shawl"
                    android:textColor="@color/neutral"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/secondary"
                    app:chipCornerRadius="20dp"
                    app:chipMinHeight="40dp"
                    app:chipStrokeColor="@color/textcolor"
                    app:chipStrokeWidth="0dp"
                    app:rippleColor="@color/primary" />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textColor="@color/neutral"
                    app:checkedIconVisible="false"
                    app:chipBackgroundColor="@color/secondary"
                    app:chipCornerRadius="20dp"
                    app:chipMinHeight="40dp"
                    app:chipStrokeColor="@color/textcolor"
                    app:chipStrokeWidth="0dp"
                    app:rippleColor="@color/primary" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Popular Products"
            android:textStyle="bold"
            android:textColor="@color/neutral"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:overScrollMode="never"
        android:background="@color/secondary"
        tools:listitem="@layout/product_card" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        app:itemIconTint="@color/primary"
        app:itemTextColor="@color/neutral"
        app:itemIconSize="28dp"
        app:labelVisibilityMode="unlabeled"
        app:elevation="12dp"
        app:menu="@menu/menu_home_bottom" />

</LinearLayout>