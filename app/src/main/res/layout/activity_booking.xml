<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp">

    <!-- App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/tvBookingTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Booking Confirmation"
            android:textAlignment="center"
            android:textColor="@color/neutral"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Success Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="40dp"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                android:backgroundTint="@color/background" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Payment Successful!"
            android:textColor="@color/neutral"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBookingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/status_badge"
            android:paddingStart="16dp"
            android:paddingTop="6dp"
            android:paddingEnd="16dp"
            android:paddingBottom="6dp"
            android:text="Pending Delivery"
            android:textColor="@color/primary"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Booking Summary Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/secondary"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Summary"
                android:textStyle="bold"
                android:textColor="@color/neutral"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <!-- Booking Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Booking Number"
                    android:textColor="@color/neutral"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvBookingNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Product Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Product"
                    android:textColor="@color/neutral"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textStyle="bold"
                    android:textColor="@color/neutral"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Rental Period -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rental Period"
                    android:textColor="@color/neutral"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvRentalPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textStyle="bold"
                    android:textColor="@color/neutral"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Delivery Option -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delivery Option"
                    android:textColor="@color/neutral"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvDeliveryOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textStyle="bold"
                    android:textColor="@color/neutral"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Payment Method -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Payment Method"
                    android:textColor="@color/neutral"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPaymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textStyle="bold"
                    android:textColor="@color/neutral"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"
                android:layout_marginBottom="12dp" />

            <!-- Total Amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Amount Paid"
                    android:textStyle="bold"
                    android:textColor="@color/neutral"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM 0.00"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Download Receipt Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDownloadReceipt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Download Receipt (PDF)"
        android:textColor="@color/background"
        android:backgroundTint="@color/primary"
        app:cornerRadius="24dp"/>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewBookings"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="View My Bookings"
            android:textColor="@color/primary"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginEnd="8dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            app:cornerRadius="24dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackToHome"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Back to Home"
            android:textColor="@color/background"
            android:backgroundTint="@color/primary"
            app:cornerRadius="24dp"
            style="@style/Widget.Material3.Button" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPaymentNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The payment will be held securely until the rental process is completed. Any refundable deposit will be returned after the item is successfully returned."
        android:textSize="13sp"
        android:textColor="@color/neutral"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="10dp" />

</LinearLayout>