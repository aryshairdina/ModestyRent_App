<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="12dp"
        android:background="@color/background"
        android:elevation="4dp">

        <!-- BACK ARROW -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/neutral"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- TITLE -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MODESTYRENT"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:letterSpacing="0.03"
            android:fontFamily="sans-serif-medium" />

        <!-- NOTIFICATION -->
        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_notifications"
            app:tint="@color/neutral"
            android:contentDescription="Notifications"
            android:visibility="invisible"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="64dp"
        android:paddingTop="12dp"
        android:fillViewport="true"
        android:layout_marginTop="64dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post a new Item"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload media and set details for your listing."
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/textcolor"/>

            <!-- MEDIA CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/secondary">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/mediaViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/background"/>

                    <Button
                        android:id="@+id/btnSelectImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Photos/Video"
                        android:drawableStart="@drawable/ic_add_photo"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/background"
                        android:layout_centerInParent="true"
                        android:elevation="8dp"/>

                    <TextView
                        android:id="@+id/tvMediaCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="12dp"
                        android:paddingStart="10dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/rounded_background_neutral"
                        android:text="0 / 8"
                        android:textColor="@color/background"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- FORM CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Item Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etItemName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor"
                            android:hint="Item Name (e.g. Baju Kurung Classic)"
                            android:inputType="textCapWords"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Size & Price -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:boxStrokeColor="@color/primary"
                            app:hintTextColor="@color/primary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/spinnerSize"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textcolor"
                                android:hint="Size (S/M/L)"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            app:boxStrokeColor="@color/primary"
                            app:hintTextColor="@color/primary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textcolor"
                                android:hint="Price (RM) / Day"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Item Status -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item Status"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/neutral"
                        android:layout_marginTop="16dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAvailable"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available"
                            android:checked="true"
                            app:checkedIconVisible="true"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipUnavailable"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unavailable"
                            app:checkedIconVisible="true"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Colors -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colors Available"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/neutral"
                        android:layout_marginTop="16dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="White"
                            style="@style/Widget.MaterialComponents.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Black"
                            style="@style/Widget.MaterialComponents.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Navy"
                            style="@style/Widget.MaterialComponents.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beige"
                            style="@style/Widget.MaterialComponents.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipColorOther"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other"
                            style="@style/Widget.MaterialComponents.Chip.Filter"/>
                    </com.google.android.material.chip.ChipGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutCustomColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCustomColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter custom color"/>
                    </com.google.android.material.textfield.TextInputLayout>



                    <!-- Category -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/neutral"
                        android:layout_marginTop="16dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategoryKurung"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kurung"
                            android:checked="true"
                            app:checkedIconVisible="true"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategoryJubah"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jubah"
                            app:checkedIconVisible="true"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategoryKebaya"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kebaya"
                            app:checkedIconVisible="true"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategoryOther"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other"
                            app:checkedIconVisible="true"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Description -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:textColor="@color/textcolor"
                            android:hint="Item description (material, condition, care...)"
                            android:inputType="textMultiLine"
                            android:gravity="top"
                            android:paddingTop="8dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Save button -->
                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Add Product"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/background"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
