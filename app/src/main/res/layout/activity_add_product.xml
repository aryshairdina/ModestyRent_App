<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Top Bar (unchanged) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:background="@color/background"
        android:elevation="4dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MODESTYRENT"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:letterSpacing="0.03"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_notifications"/>
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="65dp">

            <!-- Small hero header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:orientation="vertical"
                android:padding="14dp"
                android:gravity="center_vertical"
                android:elevation="4dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Product"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/headerSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quickly list your modest wear â€” keep it clear and stylish"
                    android:layout_marginTop="4dp"
                    android:textSize="13sp"
                    android:textColor="@color/neutral"/>
            </LinearLayout>

            <!-- Card with simple form -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Select picture (no preview) -->
                    <Button
                        android:id="@+id/btnSelectImage"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Select Item Picture"
                        android:drawableStart="@drawable/ic_add_photo"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/primary"
                        android:textColor="@android:color/white"/>

                    <!-- Item Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutItemName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:boxStrokeColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etItemName"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="Item name (e.g. Baju Kurung Classic)"
                            android:inputType="textCapWords"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Size and Price row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutSize"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:boxStrokeColor="@color/primary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/spinnerSize"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:hint="Size (S/M/L)"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutPrice"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:boxStrokeColor="@color/primary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etPrice"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:hint="Price (RM)"
                                android:inputType="numberDecimal"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Status chips -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item status"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:layout_marginTop="12dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        android:layout_marginTop="6dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAvailable"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available"
                            android:checked="true"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipUnavailable"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unavailable"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Color selection (multi-select allowed) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:layout_marginTop="12dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipColorWhite"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="White"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipColorBlack"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Black"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipColorNavy"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Navy"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipColorPink"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pastel Pink"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipColorBeige"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beige"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipColorOlive"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Olive"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipColorMaroon"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maroon"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Category selection (single-select) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:layout_marginTop="12dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategoryKurung"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kurung"
                            android:checked="true"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategoryJubah"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jubah"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategoryKebaya"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kebaya"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Description -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutDesc"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:boxStrokeColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:hint="Item description (material, condition, care...)"
                            android:inputType="textMultiLine"
                            android:gravity="top"
                            android:paddingTop="8dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Save button -->
                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Add Product"
                        android:textAllCaps="false"
                        android:layout_marginTop="14dp"
                        android:backgroundTint="@color/primary"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation (unchanged) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:background="@color/background"
        app:menu="@menu/menu_home_bottom"
        app:itemIconTint="@color/neutral"
        app:itemTextColor="@color/neutral"
        app:labelVisibilityMode="unlabeled"
        android:elevation="6dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
