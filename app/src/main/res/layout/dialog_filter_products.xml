<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvFilterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter Products"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/neutral"
            android:paddingBottom="8dp" />

        <!-- Clear all -->
        <TextView
            android:id="@+id/tvClearAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear all"
            android:textSize="13sp"
            android:textColor="@color/primary"
            android:layout_gravity="end"
            android:paddingBottom="12dp" />

        <!-- CATEGORY -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/neutral"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterCategoryGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:chipSpacing="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCategoryAll"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCategoryBajuKurung"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kurung" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCategoryJubah"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jubah" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCategoryKebaya"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kebaya" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCategoryOther"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other" />
        </com.google.android.material.chip.ChipGroup>

        <!-- SIZE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/neutral"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterSizeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:chipSpacing="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSizeAll"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSizeXS"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XS" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSizeS"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSizeM"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSizeL"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSizeXL"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL" />
        </com.google.android.material.chip.ChipGroup>

        <!-- COLOR -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/neutral"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterColorGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:chipSpacing="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipColorAll"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipColorNeutral"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neutral" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipColorPastel"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pastel" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipColorDark"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark" />

        </com.google.android.material.chip.ChipGroup>

        <!-- PRICE RANGE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price Range"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/neutral"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tvMinPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RM 0"
                android:textSize="13sp"
                android:textColor="@color/neutral" />

            <TextView
                android:id="@+id/tvMaxPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM 1000"
                android:textSize="13sp"
                android:textColor="@color/neutral" />
        </LinearLayout>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/priceRangeSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="1000"
            app:values="@array/default_price_range"
            app:trackHeight="4dp" />

        <!-- SORT BY PRICE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sort by Price"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/neutral"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterPriceSortGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:chipSpacing="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPriceSortNone"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPriceSortLowHigh"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lowest price" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPriceSortHighLow"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highest price" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetFilter"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApplyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:textAllCaps="false"
                android:backgroundTint="@color/primary"
                android:textColor="@color/background"
                app:cornerRadius="18dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
