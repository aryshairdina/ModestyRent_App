<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/background"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="6dp"
            android:backgroundTint="@color/neutral"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvProfileTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Owner Profile"
            android:textAlignment="center"
            android:textColor="@color/neutral"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="36dp"
            android:layout_height="36dp" />

    </LinearLayout>

    <!-- Owner Info Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/secondary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- Owner Avatar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/primary">

                <TextView
                    android:id="@+id/tvOwnerAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:textColor="@color/background"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="OO" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Owner Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/tvOwnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner Name"
                    android:textStyle="bold"
                    android:textColor="@color/neutral"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvOwnerBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fashion Designer"
                    android:textSize="14sp"
                    android:alpha="0.7"
                    android:textColor="@color/neutral"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvOwnerLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UiTM Shah Alam"
                    android:textSize="12sp"
                    android:alpha="0.5"
                    android:textColor="@color/neutral"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tvOwnerRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8 â­"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:textColor="@color/neutral"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Products Section Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Owner's Products"
            android:textStyle="bold"
            android:textColor="@color/neutral"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvProductsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0)"
            android:textColor="@color/neutral"
            android:textSize="14sp"
            android:alpha="0.7" />

    </LinearLayout>

    <!-- Products RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerOwnerProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="12dp"
        tools:listitem="@layout/product_card" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Products Available"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/neutral"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This owner hasn't listed any products yet."
            android:textSize="14sp"
            android:textColor="@color/neutral"
            android:alpha="0.7"
            android:layout_marginTop="8dp"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>